<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/image_iv"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/image_height"
                android:scaleType="fitXY"
                android:src="@drawable/no_image"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding8dp">

            <TextView
                    android:id="@+id/post_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/large_text_size"
                    android:layout_marginEnd="@dimen/margin2dp"
                    android:layout_marginLeft="@dimen/margin2dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/postname"
                    android:layout_toLeftOf="@+id/post_date"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/darker_gray"/>

            <TextView
                    android:id="@+id/post_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_size"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/postdate"
                    android:layout_marginStart="@dimen/margin2dp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginRight="@dimen/margin2dp"/>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding4dp"
                    android:gravity="center">

                <ImageView
                        android:layout_width="@dimen/icon_size_width"
                        android:layout_height="@dimen/icon_size_height"
                        android:scaleType="fitXY"
                        android:src="@drawable/icons_love96"/>

                <TextView
                        android:id="@+id/post_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/postlikes"
                        android:textSize="@dimen/medium_text_size"
                        android:layout_marginStart="@dimen/margin2dp"
                        android:layout_marginLeft="@dimen/margin2dp"
                        android:textColor="@android:color/holo_red_light"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding4dp"
                    android:gravity="center">

                <ImageView
                        android:layout_width="@dimen/icon_size_width"
                        android:layout_height="@dimen/icon_size_height"
                        android:scaleType="fitXY"
                        android:src="@drawable/icons_views96"/>

                <TextView
                        android:id="@+id/post_views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/postviews"
                        android:textSize="@dimen/medium_text_size"
                        android:layout_marginStart="@dimen/margin2dp"
                        android:layout_marginLeft="@dimen/margin2dp"
                        android:textColor="@android:color/holo_blue_light"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding4dp"
                    android:gravity="center">

                <ImageView
                        android:layout_width="@dimen/icon_size_width"
                        android:layout_height="@dimen/icon_size_height"
                        android:scaleType="fitXY"
                        android:src="@drawable/icons_share96"/>

                <TextView
                        android:id="@+id/post_shares"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/postshares"
                        android:textSize="@dimen/medium_text_size"
                        android:layout_marginStart="@dimen/margin2dp"
                        android:layout_marginLeft="@dimen/margin2dp"
                        android:textColor="@android:color/holo_blue_dark"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
